<div class="hero is-info">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">Planets</h1>
        <h3 class="subtitle">Manager your planets</h3>
      </div>
    </div>
</div>

<section class="section">
<div class="columns">
  
  <div class="column is-8 is-offset-2">

    <% if notice %>
      <article class="message is-primary">
          <div id="notice" class="message-body">
            <%= notice %>
          </div>
      </article>
    <% end %>

    <table class="table is-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @planets.each do |planet| %>
          <tr>
            <td><%= planet.name %></td>
            <td><%= planet.created_at.strftime("%d/%m/%y %H:%M:%S") %></td>
            <td><%= planet.updated_at.strftime("%d/%m/%y %H:%M:%S") %></td>
            <td><%= link_to 'Show', planet, class: "button is-primary" %></td>
            <td><%= link_to 'Edit', edit_planet_path(planet), class: "button is-info" %></td>
            <td><%= link_to 'Destroy', planet, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Planet', new_planet_path, class: "button is-success" %>

  </div>

</div>
</section>
